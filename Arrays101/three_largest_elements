 //Write a C++ program to find the largest three elements in an array
 
 #include<iostream> 

using namespace std ; 

int main() 
{ 
		int array_size ; 
		cout<<"\nPlease enter the number of elements of the array" ; 
		cin>>array_size ; 
		
		int ApnaArray[array_size] ;
		
		cout<<"\nPlease enter the elements of the array" ; 
		
		for ( int i = 0 ; i < array_size ; i++ ) 
		{ 
			cin>>ApnaArray[i] ; 
		} 
		
		
		int temp1 = ApnaArray[0] ; 
		
		for ( int i = 0 ; i < array_size ; i++ ) 
		{ 
			if(ApnaArray[i] > temp1 ) 
				{ 
					temp1 = ApnaArray[i] ; 
				} 
		} 
		
		cout<<"\nThe largest element is "<<temp1 ; 
		
		int temp2 = ApnaArray[0] ; 
		
		for ( int i = 0 ; i < array_size ; i++ ) 
		{ 
			if((ApnaArray[i] > temp2) && (temp1>ApnaArray[i])) 
				{ 
					temp2 = ApnaArray[i] ; 
				} 
		} 
		
		cout<<"\nThe 2nd largest element is "<<temp2 ;
		
		int temp3 = ApnaArray[0] ; 
		
		for ( int i = 0 ; i < array_size ; i++ ) 
		{ 
			if((ApnaArray[i] > temp3) && (temp2>ApnaArray[i])) 
				{ 
					temp3 = ApnaArray[i] ; 
				} 
		} 
		
		cout<<"\nThe 2nd largest element is "<<temp3 ;

		
	} 
